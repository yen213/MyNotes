<?xml version="1.0" encoding="utf-8"?><!-- ToolBar for the activity to write a Note -->
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_toolbar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/button_selector"
            android:contentDescription="@string/string_back_icon_description"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:src="@drawable/left_icon" />

        <ImageView
            android:id="@+id/favorite_toolbar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toStartOf="@id/save_toolbar"
            android:layout_toLeftOf="@id/save_toolbar"
            android:background="@drawable/button_selector"
            android:contentDescription="@string/string_fav_icon_description"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:src="@drawable/favorite_icon_unfilled" />

        <TextView
            android:id="@+id/save_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:text="@string/string_save"
            android:textColor="@color/darK_grey"
            android:textSize="44sp" />

    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>